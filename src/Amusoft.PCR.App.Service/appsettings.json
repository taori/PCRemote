{
  "ApplicationSettings": {
    "ApplicationTitle": "PC Remote 3",
    "DropDatabaseOnStart": false,

    "DesktopIntegration": {
      "ExePath": "../win-integration/Amusoft.PCR.Int.Agent.Windows.exe"
    },
    "Authentication": {
      "IdleResetThreshold": "30.0:0:0"
    },
    "ServerUrlTransmitter": {
      "HandshakePort": 50001,
      "HostAlias": "Endpoint 1 (Prod)"
    },
    "Jwt": {
      "RefreshAccessTokenInterval": "0.0:20:0",
      "RefreshTokenValidDuration": "30.0:0:0",
      "AccessTokenValidDuration": "7.0:0:0",
      "Key": "37FACD28-ECC4-4BB8-8709-630A1C4F889E",
      "Issuer": "PC Remote 3"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=Amusoft.PCR.Server;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Amusoft": "Debug"
    }
  },
  "AllowedHosts": "*",

  "Kestrel": {

    "EndpointDefaults": {
      "Protocols": "Http2"
    },

    "Endpoints": {
      "Http": {
        "Url": "http://*:5000"
      },
      "Https": {
        "Url": "https://*:5001",
        "Certificate": {
          "Subject": "localhost",
          "AllowInvalid": true,
          "Store": "My",
          "Location": "LocalMachine"
        }
      }
    }
  }
}
