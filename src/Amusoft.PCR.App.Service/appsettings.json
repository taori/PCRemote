{
  "ApplicationSettings": {
    "ApplicationTitle": "PC Remote 3",
    "DropDatabaseOnStart": false,
    "RuntimePermissionRequests": true,
    "DesktopIntegration": {
      "ExePath": "../win-integration/Amusoft.PCR.App.WindowsAgent.exe"
    },
    "Authentication": {
      "IdleResetThreshold": "30.0:0:0"
    },
    "ServerUrlTransmitter": {
      "HandshakePort": 50001,
      "HostAlias": "Endpoint 1 (Prod)"
    },
    "Jwt": {
      "RefreshTokenValidDuration": "0.0:0:0",
      "AccessTokenValidDuration": "0.0:0:0",
      "Key": "37FACD28-ECC4-4BB8-8709-630A1C4F889E",
      "Issuer": "PC Remote 3"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source={AppDir}\\pcr3.db"
  },
  "Logging": {
    "Console": {
      "TimestampFormat": "[HH:mm:ss] "
    },
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.Routing": "Warning",
      "Amusoft": "Information"
    }
  },
  "AllowedHosts": "*",

  "Kestrel": {

    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    },

    "Endpoints": {
      "Http": {
        "Url": "http://*:5000"
      }
      //"Https": {
      //  "Url": "https://*:5001",
      //  "Certificate": {
      //    "Subject": "localhost",
      //    "AllowInvalid": true,
      //    "Store": "My",
      //    "Location": "LocalMachine"
      //  }
      //}
    }
  }
}
