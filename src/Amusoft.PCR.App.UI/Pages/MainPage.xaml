<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:Amusoft.PCR.Application.UI;assembly=Amusoft.PCR.Application"
             x:DataType="viewModels:MainViewModel"
             x:Class="Amusoft.PCR.App.UI.Pages.MainPage">
    <Grid>
        <ListView ItemsSource="{x:Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:MainViewItemModel">
                    <ViewCell>
                        <Button Margin="10,5" 
                                ImageSource="{x:Binding ImagePath}"
                                Command="{x:Binding Command}" 
                                Text="{x:Binding Text}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</ContentPage>
