<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="using:Amusoft.PCR.App.UI.Controls"
             xmlns:shared="clr-namespace:Amusoft.PCR.Application.Shared;assembly=Amusoft.PCR.Application"
             xmlns:vm="clr-namespace:Amusoft.PCR.Application.UI.VM;assembly=Amusoft.PCR.Application"
             x:Class="Amusoft.PCR.App.UI.Pages.StaticCommandButtonList"
             x:DataType="vm:StaticCommandButtonListViewModel"
             Title="{x:Binding Title}">
    <Grid Padding="{StaticResource PaddingButtonPanel}">
        <CollectionView ItemsSource="{x:Binding Path=Items}"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="shared:NavigationItem">
                    <controls:ListViewButton
                        Margin="0,0,0,10"
                        CommandParameter="{x:Binding}"
                        Command="{x:Binding Path=Command}"
                        Text="{x:Binding Path=Text}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>