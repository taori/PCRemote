<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Amusoft.PCR.Application.UI.VM;assembly=Amusoft.PCR.Application"
             x:Class="Amusoft.PCR.App.UI.Pages.Host"
             x:DataType="vm:HostViewModel"
             Title="{x:Binding Path=Title}">
    <VerticalStackLayout>
        <Button Command="{x:Binding Path=ShutdownCommand}" Text="Shutdown"/>
        <Button Command="{x:Binding Path=AbortShutdownCommand}" Text="Abort Shutdown"/>
        <Button Command="{x:Binding Path=ToggleMuteCommand}" Text="Toggle mute"/>
    </VerticalStackLayout>
</ContentPage>