<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Amusoft.PCR.UI.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Amusoft.PCR.UI.App"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:pages="clr-namespace:Amusoft.PCR.UI.App.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Port configuration"
        ContentTemplate="{DataTemplate pages:PortConfiguration}"
        Route="PortConfiguration" />

</Shell>
