<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Amusoft.PCR.UI.ViewModels;assembly=Amusoft.PCR.UI.ViewModels"
             xmlns:behaviors="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Amusoft.PCR.UI.App.Pages.MainPage">
    <ContentPage.BindingContext>
        <viewModels:MainViewModel></viewModels:MainViewModel>
    </ContentPage.BindingContext>

    <Grid>
        <ListView ItemsSource="{x:Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Button Margin="10,5" 
                                ImageSource="{x:Binding ImagePath}"
                                Command="{x:Binding Command}" 
                                Text="{x:Binding Text}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</ContentPage>
